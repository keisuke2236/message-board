        <th>名前</th>
        <th>メッセージ</th>
    </tr>
    <% @messages.each do |message| %>
    <tr>
        <td><span class="label label-info"><%= message.name %></span></td>
        <td><%= message.body %></td>
    </tr>
    <% end %>
  </table>
</div>

