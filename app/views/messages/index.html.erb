<div class="table-responsive panel panel-default">
  <table class="table">
    <tr  class="panel-heading">
        <th>名前</th>
        <th>メッセージ</th>
    </tr>
    <% @messages.each do |message| %>
    <tr>
        <td><span class="label label-info"><%= message.name %></span></td>
        <td><%= message.body %></td>
    </tr>
    <% end %>
  </table>
</div>

<%# form_forには do |f|〜ENDまでの内容が全て送信される %>
<%= form_for(@message, html: {class: "form-horizotal"}) do |f| %>
    <% if @message.errors.present? %>
    <div class="alert alert-danger">
        <%= alert %>
        <ul>
        <% @message.errors.full_messages.each do |full_message| %>
            <li>
                <%= full_message %>
            </li>
        <% end %> 
        </ul>
    </div>
  <% end %>

<div class="form-group">
    <label for="message_name" class="control-label col-md-2">名前</label>
    <div class="col-md-10"><%= f.text_field:name, :class => "form-control" %></div>
</div>
<div class="form-group">
    <label for="message_body" class="control-label col-md-2">内容</label>
    <div class="col-md-10"><%= f.text_area :body, :class => "form-control" %></div>
</div>
<div class="form-group">
    <%= f.submit :class => "btn btn-success button1 col-md-10" %>
</div>
<% end %>


