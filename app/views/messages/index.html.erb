<div class="table-responsive panel panel-default">
  <table class="table">
    <tr  class="panel-heading">
        <th>名前</th>
        <th>年齢</th>
        <th>メッセージ</th>
    </tr>
    <% @messages.each do |message| %>
    <tr>
        <td><span class="label label-info"><%= message.name %></span></td>
        <td><%= message.age %></td>
        <td><%= message.body %></td>
        <% #edit_message_path(message)は編集ページへのパス指定 %>
        <td><%= link_to "edit", edit_message_path(message),:class => "btn btn-warning" %></td>
        <% #             削除へリンク　メッセージコントローラーのデリートメソッドへ　一応確認をする  %>
        <td><%= link_to "destroy" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' },:class => "btn btn-danger" %></td>
    </tr>
    <% end %>
  </table>
</div>

<% '定義しておいたフォームを読み込んで利用している' %>
<%= render 'form' %>
