<%= form_for(@message, html: {class: "form-horizotal"}) do |f| %>
    <% if @message.errors.present? %>
    <div class="alert alert-danger">
        <%= alert %>
        <ul>
        <% @message.errors.full_messages.each do |full_message| %>
            <li>
                <%= full_message %>
            </li>
        <% end %> 
        </ul>
    </div>
  <% end %>

<div class="form-group">
    <label for="message_name" class="control-label col-md-2">名前：</label>
    <div class="col-md-4"><%= f.text_field:name, :class => "form-control" %></div>
    
    <label for="message_body" class="control-label col-md-2">内容</label>
    <div class="col-md-4"><%= f.text_area :body, :class => "form-control" %></div>
    <%= f.submit :class => "btn button1" %>
</div>
<% end %>


